    "test-all": "npm run check-format && npm run check-lint && npm run build",
    "prepare": "husky install"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.15",
    "@heroicons/react": "^2.0.18",
    "eslint": "8.45.0",
